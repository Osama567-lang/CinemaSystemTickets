@model CinemaSystemTickets.Models.Category
@{
    ViewData["Title"] = "Edit Category";
}
<div class="container text-light">
    <h2 class="mb-4 text-warning">✏️ Edit Category</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="CategoryId" />
        <div class="mb-3">
            <label asp-for="CategoryName" class="form-label text-light"></label>
            <input asp-for="CategoryName" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning"><i class="bi bi-save"></i> Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>