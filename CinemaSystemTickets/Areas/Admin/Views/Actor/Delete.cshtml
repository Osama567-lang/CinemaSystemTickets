@model CinemaSystemTickets.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<div class="container mt-5 text-light">
    <h2 class="text-danger mb-4">🗑️ Delete Actor</h2>

    <div class="alert alert-warning">
        Are you sure you want to delete this actor?
    </div>

    <dl class="row">
        <dt class="col-sm-3">First Name</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>

        <dt class="col-sm-3">Last Name</dt>
        <dd class="col-sm-9">@Model.LastName</dd>

        <dt class="col-sm-3">Biography</dt>
        <dd class="col-sm-9">@Model.Bio</dd>

        <dt class="col-sm-3">News</dt>
        <dd class="col-sm-9">@Model.News</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ActorID" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash-fill me-1"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>

</div>
