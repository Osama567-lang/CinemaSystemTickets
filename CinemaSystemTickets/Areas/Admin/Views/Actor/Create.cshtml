@model CinemaSystemTickets.Models.Actor

@{
    ViewData["Title"] = "Create Actor";
}

<div class="container mt-5 text-light">
    <h2 class="text-warning mb-4">➕ Add New Actor</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <input asp-for="FirstName" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <input asp-for="LastName" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Bio" class="form-label">Biography</label>
            <textarea asp-for="Bio" class="form-control bg-dark text-light border-secondary" rows="4"></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="News" class="form-label">News</label>
            <textarea asp-for="News" class="form-control bg-dark text-light border-secondary" rows="3"></textarea>
            <span asp-validation-for="News" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="bi bi-save me-1"></i> Save
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
