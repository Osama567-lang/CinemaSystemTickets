<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            background-color: #1e1e1e;
            height: 100vh;
            position: fixed;
            width: 240px;
            padding-top: 1rem;
            border-right: 1px solid #333;
            overflow-y: auto;
        }

            .sidebar h5 {
                font-weight: bold;
                letter-spacing: 1px;
            }

        .sidebar-heading {
            padding: 10px 20px 5px 20px;
            color: #f0f0f0;
            font-size: 0.75rem;
            letter-spacing: 0.08em;
            font-weight: 600;
            text-transform: uppercase;
            opacity: 0.9;
        }

        .sidebar a {
            display: block;
            padding: 12px 20px;
            color: #ffc107;
            text-decoration: none;
            font-weight: 500;
            transition: 0.2s ease;
            border-bottom: 1px solid transparent;
        }

            .sidebar a:hover {
                background-color: #2a2a2a;
                color: #ffffff;
                padding-left: 25px;
                border-left: 3px solid #ffc107;
            }

        .main-content {
            margin-left: 240px;
            padding: 2rem;
        }

        footer {
            background-color: #1e1e1e;
            color: #aaa;
            padding: 1rem;
            font-size: 0.9rem;
            border-top: 1px solid #333;
        }

        .chart-container {
            background-color: #1e1e1e;
            border-radius: 12px;
            padding: 1rem;
            box-shadow: 0 0 10px #000;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <h5 class="text-center text-warning mb-4">🎬 Admin Panel</h5>

        <!-- Dashboard -->
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
            <i class="bi bi-speedometer2 me-2"></i> Dashboard
        </a>

        <!-- Management Section -->
        <hr class="text-secondary mx-3" />
        <div class="sidebar-heading">Management</div>

        <a asp-area="Admin" asp-controller="Movie" asp-action="Index">
            <i class="bi bi-film me-2"></i> Movies
        </a>
        <a asp-area="Admin" asp-controller="Cinema" asp-action="Index">
            <i class="bi bi-building me-2"></i> Cinemas
        </a>
        <a asp-area="Admin" asp-controller="Actor" asp-action="Index">
            <i class="bi bi-people me-2"></i> Actors
        </a>
        <a asp-area="Admin" asp-controller="Category" asp-action="Index">
            <i class="bi bi-tags me-2"></i> Categories
        </a>

        <!-- Analytics Section -->
        <hr class="text-secondary mx-3" />
        <div class="sidebar-heading">Analytics</div>

        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Charts">
            <i class="bi bi-bar-chart me-2"></i> Charts
        </a>
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Table">
            <i class="bi bi-table me-2"></i> Data Table
        </a>

        <!-- Return to site -->
        <hr class="text-secondary mx-3" />
        <a asp-area="Customers" asp-controller="Home" asp-action="Index">
            <i class="bi bi-house-door me-2"></i> Back to Site
        </a>
    </div>


    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center mt-5">
        &copy; 2025 - <span class="text-warning">CinemaSystemTickets</span> Admin Panel
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
